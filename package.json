{
  "name": "pmtool",
  "version": "2.0.0",
  "description": "PSI Generator Total Cost of Ownership & Service Planning Platform",
  "main": "server/index.js",
  "scripts": {
    "dev": "concurrently \"npm run server:dev\" \"npm run client:dev\"",
    "server:dev": "node --watch server/index.js",
    "client:dev": "cd client && npm run dev",
    "client:build": "cd client && npm run build",
    "client:install": "cd client && npm install --include=dev",
    "build": "npm run client:build",
    "start": "NODE_ENV=production node server/index.js",
    "seed": "node server/seed.js",
    "postinstall": "npm run client:install"
  },
  "dependencies": {
    "pg": "^8.13.0",
    "cors": "^2.8.5",
    "express": "^4.21.0",
    "helmet": "^8.0.0",
    "multer": "^1.4.5-lts.1",
    "papaparse": "^5.4.1",
    "xlsx": "^0.18.5",
    "uuid": "^10.0.0"
  },
  "devDependencies": {
    "concurrently": "^9.1.0"
  }
}
